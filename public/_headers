  # Security Headers
  X-Frame-Options: SAMEORIGIN
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), camera=(), microphone=()
  
  # Content Security Policy Documentation:
  # - default-src 'self': Trust our own domain
  # - script-src: 'self' + GA4 + unsafe-inline (required for react-helmet-async JSON-LD)
  # - style-src: 'self' + Google Fonts + unsafe-inline (required for dynamic styles)
  # - font-src: Google Fonts
  # - img-src: 'self' + trackers + data: (for small icons)
  # - connect-src: 'self' + GA4
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' https://www.googletagmanager.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://www.google-analytics.com https://region1.google-analytics.com;

